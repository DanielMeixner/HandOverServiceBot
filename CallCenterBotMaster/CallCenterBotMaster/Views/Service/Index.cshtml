                $('#userCasesContainer').append('<div class="conversationContainer"><div class="userInformation"><h2>User Information</h2><div>Conversation ID: ' + userChatObject.userConversationId + '</div><div>Customer Number: ' + userChatObject.customerNumber + '</div></div><iframe class="chatframe" src="https://webchat.botframework.com/embed/HandOverServiceBot?s=NHQoSKJqUbA.cwA.lvA.OBNc2JFUZmtnUtxCKDidBhMZHYSBdICeuQ5P8mxOmRo"></iframe></div>');
                console.log('Added a new conversation');
            };
            $.connection.hub.start().done(function () {
                console.log("Hub startet");

            });
        });
